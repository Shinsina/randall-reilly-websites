$ const blockName = "careersingear-lookup-banner";

<marko-web-block name=blockName class=input.class>
  <marko-web-element block-name=blockName name="header">
    <marko-web-img
      class=`${blockName}__logo`
      src='https://img.truckersnews.com/files/base/randallreilly/all/image/static/newsletter-pushdown/Search-image-TN.png?auto=format,compress&w=120'
      srcset='https://img.truckersnews.com/files/base/randallreilly/all/image/static/newsletter-pushdown/Search-image-TN.png?auto=format,compress&w=120&dpr=2 2x'
      alt="Job Search Logo"
    />
  </marko-web-element>
  <marko-web-element block-name=blockName name="name">
    Looking for your next job?
  </marko-web-element>
  <marko-web-element block-name=blockName name="description">
    <b>Careersingear.com</b> is the go-to platform for the Trucking industry. Donâ€™t just find the job you need; find the job you want with the company that wants you!
  </marko-web-element>
  <form action="https://www.careersingear.com/search" method="GET" target="_blank">
    <div class="form-group">
      <input
        id="keywords-filter"
        class="form-control"
        type="text"
        placeholder="Job titles, keywords, company or description"
        name="keywords"
      />
    </div>
    <div class="form-group">
      <input
        id="location"
        class="form-control"
        type="location"
        placeholder="City, State or Zip"
        name="location"
      />
    </div>
    <marko-web-element block-name=blockName name="button-wrapper">
      <input class="btn btn-primary" type="submit" value="Search Now!" />
    </marko-web-element>
  </form>
</marko-web-block>
